<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>회원가입</title>
    <!-- axios -->
    <script src="/axios/dist/axios.min.js"></script>
    <!-- jquery -->
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
      integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0="
      crossorigin="anonymous"
    ></script>
    <!-- style -->
    <link rel="stylesheet" href="./../static/css/style.css" />
    <link rel="stylesheet" href="./../static/css/signup.css" />
    <!-- icon -->
    <script
      src="https://kit.fontawesome.com/c44f54db1d.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="containerSignup">
      <h2>Sign Up</h2>
      <div class="signup">
        <a class="logo" href="/"><img src="./../static/img/logo.png" /></a>
        <form id="signupForm">
          <div class="inputList">
            <input
              type="text"
              name="mbti"
              placeholder="나의 MBTI"
              required
              maxlength="4"
              onchange="test()"
            /><span></span>
          </div>
          <a
            target="_blank"
            href="https://www.16personalities.com/ko/%EB%AC%B4%EB%A3%8C-%EC%84%B1%EA%B2%A9-%EC%9C%A0%ED%98%95-%EA%B2%80%EC%82%AC"
            ><u><i class="fa-solid fa-link"></i> MBTI검사 하러가기</u></a
          >
          <div class="inputList">
            <input
              type="text"
              name="id"
              placeholder="아이디(소문자 영문,숫자)"
              maxlength="15"
              required
            />
            <span></span>
          </div>
          <div class="inputList">
            <input
              type="password"
              name="pw"
              placeholder="비밀번호(소문자 영문,숫자)"
              maxlength="15"
              autocomplete="off"
              required
            />
            <span></span>
          </div>
          <div class="inputList">
            <input
              type="email"
              name="email"
              placeholder="이메일"
              required
            /><span></span>
          </div>
          <div class="inputList">
            <input
              type="text"
              name="name"
              placeholder="이름(한글 2~10자리)"
              maxlength="10"
              required
            /><span></span>
          </div>
          <div class="inputList">
            <input
              type="text"
              name="birth"
              pattern="\d*"
              maxlength="8"
              placeholder="생년월일 8자 *예) 20221010"
            />
            <span></span>
          </div>
          <div class="inputList">
            <input
              type="text"
              name="nick"
              placeholder="닉네임(한글 2~8자리)"
              maxlength="8"
              required
            /><span></span>
          </div>

          <div class="radio">
            <div><i class="fa-solid fa-venus-mars"></i></div>
            <div>
              <label for="man"> 남</label
              ><input
                type="radio"
                name="gender"
                id="man"
                value="남"
                checked
                required
              />
            </div>
            <div>
              <label for="woman"> 여</label
              ><input
                type="radio"
                name="gender"
                id="woman"
                value="여"
                required
              />
            </div>
          </div>
          <button id="signupBtn" type="button" onclick="onSignup()">
            회원가입
          </button>
        </form>
      </div>
    </div>
    <script>
      function onSignup() {
        // 유효성검사
        var mbti = document.querySelector("input[name=mbti]");
        var id = document.querySelector("input[name=id]");
        var pw = document.querySelector("input[name=pw]");
        var email = document.querySelector("input[name=email]");
        var name = document.querySelector("input[name=name]");
        var birth = document.querySelector("input[name=birth]");
        var nick = document.querySelector("input[name=nick]");

        var mbtiRegExp = /^[e|i]+[s|n]+[t|f]+[j|p]+/;
        var idpwRegExp = /^[a-z0-9]{4,15}$/;
        var emailRegExp = /^[A-Za-z0-9_\.\-]+@[A-Za-z0-9\-]+\.[A-Za-z0-9\-]+/;
        var nameRegExp = /^[ㄱ-ㅎ|ㅏ-ㅣ|가-힣]{2,10}$/;
        var birthRegExp = /^[0-9]{8}$/;
        var nickRegExp = /^[ㄱ-ㅎ|ㅏ-ㅣ|가-힣]{2,8}$/;

        if (!mbtiRegExp.test(mbti.value)) {
          $(mbti).next().text("mbti가 올바르지 않습니다!");
          return false;
        } else {
          $(mbti).next().text("");
        }

        if (!idpwRegExp.test(id.value)) {
          $(id).next().text("영문 소문자와 숫자 4~15자리로 입력해야합니다!");
          return false;
        } else {
          $(id).next().text("");
        }

        if (!idpwRegExp.test(pw.value)) {
          $(pw).next().text("영문 소문자와 숫자 4~15자리로 입력해야합니다!");
          return false;
        } else {
          $(pw).next().text("");
        }

        if (!emailRegExp.test(email.value)) {
          $(email).next().text("이메일형식이 올바르지 않습니다!");
          return false;
        } else {
          $(email).next().text("");
        }

        if (!nameRegExp.test(name.value)) {
          $(name).next().text("한글로 2~10자리로 입력해야합니다!");
          return false;
        } else {
          $(name).next().text("");
        }

        if (!birthRegExp.test(birth.value)) {
          $(birth).next().text("숫자로 8자리만 가능합니다!");
          return false;
        } else {
          $(birth).next().text("");
        }

        if (!nickRegExp.test(nick.value)) {
          $(nick).next().text("한글로 2~8자리로 입력해야합니다!");
          return false;
        } else {
          $(nick).next().text("");
        }

        var gender = document.querySelector("input[name=gender]");

        if (!gender.checkValidity()) {
          gender.reportValidity();
          return false;
        }
        var form = document.querySelector("form");
        var genderCheck = document.querySelector("input[name=gender]:checked");
        var userInfo = {
          mbti: form.mbti.value,
          id: form.id.value,
          pw: form.pw.value,
          email: form.email.value,
          name: form.name.value,
          birth: form.birth.value,
          nick: form.nick.value,
          gender: genderCheck.value,
        };
        console.log(userInfo);
        axios({
          url: "/signup/post",
          method: "post",
          data: userInfo,
        }).then((response) => {
          alert(response.data);
          if (response.data == "가입완료") {
            //회원가입 성공 후 로그인페이지 이동
            window.location.replace("/signin");
          }
        });
      }
    </script>
  </body>
</html>
